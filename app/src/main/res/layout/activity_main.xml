<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="#FF7A52"> <!-- Custom orange background -->

    <!-- Welcome Text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_to_pawmatch1"
        android:textSize="33sp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp"
        android:layout_gravity="center"
        android:contentDescription="@string/welcome_text1" />

    <!-- Sign In Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/signInButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/sign_in1"
        android:padding="8dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="@color/white"
        android:textColor="@color/orange_color"
        app:cornerRadius="50dp" /> <!-- Rounded corners -->

    <!-- Sign Up Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/signUpButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/sign_up1"
        android:padding="8dp"
        android:backgroundTint="@color/white"
        android:textColor="@color/orange_color"
        app:cornerRadius="50dp" /> <!-- Rounded corners -->
</LinearLayout>
