<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDBDA7"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"> <!-- Custom orange background -->


    <!--    <com.yuyakaido.android.cardstackview.CardStackView-->
    <!--        android:id="@+id/card_stack_view"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="match_parent"-->
    <!--        app:swipeThreshold="0.3"-->
    <!--        app:visibleCount="3" />-->


    <!-- Welcome Text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="32dp"
        android:contentDescription="@string/welcome_text1"
        android:text="Welcome to PawMatch"
        android:textSize="33sp"
        android:textStyle="bold" />

    <!-- Sign In Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/signInButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:backgroundTint="@color/white"
        android:padding="8dp"
        android:text="Sign In"
        android:textColor="@color/orange_color"
        app:cornerRadius="50dp" /> <!-- Rounded corners -->

    <!-- Sign Up Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/signUpButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:padding="8dp"
        android:text="Sign Up"
        android:textColor="@color/orange_color"
        app:cornerRadius="50dp" /> <!-- Rounded corners -->


</LinearLayout>
