<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.test_pawmatch">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="32"
        tools:ignore="ScopedStorage" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PawMatch"
        tools:targetApi="31">

        <activity
            android:name=".activities.MainActivity"
            android:exported="true"
            tools:ignore="MissingClass">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.SignInActivity"
            android:exported="true"
            tools:ignore="MissingClass">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.SignUpActivity"
            android:exported="false"
            android:label="Sign Up"
            tools:ignore="MissingClass" />

        <activity
            android:name=".activities.PetProfileCreationActivity"
            android:exported="false"
            android:label="Create Pet Profile"
            tools:ignore="MissingClass" />

        <activity
            android:name=".activities.VaccinationManagementActivity"
            android:exported="false"
            android:label="Manage Vaccinations"
            tools:ignore="MissingClass" />

        <activity
            android:name=".activities.PreferencesActivity"
            android:exported="false"
            tools:ignore="MissingClass" />

        <activity
            android:name=".activities.PetMatchingActivity"
            android:exported="false"
            android:label="Find Matches"
            tools:ignore="MissingClass" />

        <activity
            android:name=".activities.PetDetailsActivity"
            android:exported="false"
            tools:ignore="MissingClass" />

        <activity
            android:name=".activities.ChatActivity"
            android:exported="false"
            tools:ignore="MissingClass" />

    </application>

</manifest>